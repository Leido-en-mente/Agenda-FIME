<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009929"
    android:onClick="Agregar"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Agregar Evento"
        android:textColor="#000000"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <EditText
        android:id="@+id/etTitulo"
        android:layout_width="266dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/gallery_thumb"
        android:hint="  Titulo"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"></EditText>

    <EditText
        android:id="@+id/etDescripcion"
        android:layout_width="266dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/gallery_thumb"
        android:hint="  Descipcion"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etTitulo"></EditText>

    <EditText
        android:id="@+id/edfecha"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/input_bg"
        android:hint="  Fecha Inicio"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.749"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtfechainicio"></EditText>

    <TextView
        android:id="@+id/txtfechafin"
        android:layout_width="166dp"
        android:layout_height="23dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="Fecha de Fin"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.318"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtfinevento" />

    <Button
        android:id="@+id/bhora2"
        android:layout_width="109dp"
        android:layout_height="48dp"
        android:backgroundTint="#98FF96"
        android:text="Hora"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.258"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txthorafin" />

    <EditText
        android:id="@+id/edfecha2"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:background="@drawable/input_bg"
        android:hint="  Fecha Fin"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.749"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtfechafin"></EditText>

    <Button
        android:id="@+id/bfecha"
        android:layout_width="109dp"
        android:layout_height="48dp"
        android:layout_marginBottom="448dp"
        android:backgroundTint="#98FF96"
        android:text="Fecha"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.258"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtfinevento"
        android:layout_width="166dp"
        android:layout_height="23dp"
        android:layout_marginTop="392dp"
        android:gravity="center"
        android:text="Fin del Evento"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.559"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtfechainicio"
        android:layout_width="166dp"
        android:layout_height="23dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:text="Fecha de Inicio"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/bfecha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.318"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bfecha2"
        android:layout_width="109dp"
        android:layout_height="48dp"
        android:layout_marginBottom="240dp"
        android:backgroundTint="#98FF96"
        android:text="Fecha"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.258"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txthorainicio"
        android:layout_width="166dp"
        android:layout_height="23dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Hora de Inicio"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.318"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bfecha" />

    <EditText
        android:id="@+id/edhora"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/input_bg"
        android:hint="  Hora Inicio"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.713"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txthorainicio"></EditText>

    <EditText
        android:id="@+id/edhora2"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:background="@drawable/input_bg"
        android:hint="  Hora Fin"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.749"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txthorafin"></EditText>

    <TextView
        android:id="@+id/txthorafin"
        android:layout_width="166dp"
        android:layout_height="23dp"
        android:gravity="center"
        android:text="Hora de Fin"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.351"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bfecha2" />

    <TextView
        android:id="@+id/txtiniciodeevento"
        android:layout_width="166dp"
        android:layout_height="23dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="Inicio del Evento"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/txtfechainicio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.559"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDescripcion"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/bhora"
        android:layout_width="109dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#98FF96"
        android:text="Hora"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.258"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txthorainicio" />

    <CheckBox
        android:id="@+id/chkDuracion"
        android:layout_width="134dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:text=" Todo el dia"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edhora2" />

    <Button
        android:id="@+id/btnmainAgregar"
        android:layout_width="150dp"
        android:layout_height="69dp"
        android:backgroundTint="#98FF96"

        android:onClick="Agregar"
        android:text="Agregar a calendario"
        android:textSize="15dp"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.176"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chkDuracion"
        app:layout_constraintVertical_bias="0.3"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="132dp"
        android:layout_height="68dp"
        android:backgroundTint="#98FF96"
        android:text="Cancelar"
        android:textSize="15dp"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.845"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.957" />


</androidx.constraintlayout.widget.ConstraintLayout>